<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <defaultDocument>
      <files>
        <clear />
        <add value="index.html" />
      </files>
    </defaultDocument>
    
    <rewrite>
      <rules>
        <rule name="about" stopProcessing="true">
          <match url="^about/?$" />
          <action type="Rewrite" url="/about.html" />
        </rule>
        <rule name="products" stopProcessing="true">
          <match url="^products/?$" />
          <action type="Rewrite" url="/products.html" />
        </rule>
        <rule name="industries" stopProcessing="true">
          <match url="^industries/?$" />
          <action type="Rewrite" url="/industries.html" />
        </rule>
      </rules>
    </rewrite>
    
    <httpErrors errorMode="Custom">
      <remove statusCode="404" />
      <error statusCode="404" path="/404.html" responseMode="ExecuteURL" />
    </httpErrors>
  </system.webServer>
</configuration>
